{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Loan Management API",
    "description": "API documentation for the Loan Management System"
  },
  "host": "localhost:5000",
  "basePath": "/api",
  "schemes": ["http"],
  "paths": {
    "/auth/register": {
      "post": {
        "summary": "Register a new user",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "User registered successfully"
          },
          "400": {
            "description": "Invalid input"
          }
        ]
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Login a user",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User logged in successfully"
          },
          "400": {
            "description": "Invalid credentials"
          }
        ]
      }
    },
    "/loans": {
      "post": {
        "summary": "Create a new loan",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Loan"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Loan created successfully"
          },
          "400": {
            "description": "Invalid input"
          }
        ]
      },
      "get": {
        "summary": "Get all loans for the authenticated user",
        "responses": {
          "200": {
            "description": "List of loans",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Loan"
              }
            }
          },
          "400": {
            "description": "Invalid input"
          }
        ]
      }
    },
    "/loans/{loanId}": {
      "put": {
        "summary": "Update a loan status",
        "parameters": [
          {
            "name": "loanId",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Loan"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Loan updated successfully"
          },
          "400": {
            "description": "Invalid input"
          },
          "404": {
            "description": "Loan not found"
          }
        ]
      },
      "delete": {
        "summary": "Delete a loan",
        "parameters": [
          {
            "name": "loanId",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Loan deleted successfully"
          },
          "400": {
            "description": "Invalid input"
          },
          "404": {
            "description": "Loan not found"
          }
        ]
      }
    },
    "/payments": {
      "post": {
        "summary": "Create a new payment",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Payment"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Payment created successfully"
          },
          "400": {
            "description": "Invalid input"
          }
        ]
      }
    },
    "/payments/{loanId}": {
      "get": {
        "summary": "Get all payments for a loan",
        "parameters": [
          {
            "name": "loanId",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "List of payments",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Payment"
              }
            }
          },
          "400": {
            "description": "Invalid input"
          }
        ]
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "role": {
          "type": "string"
        }
      }
    },
    "Loan": {
      "type": "object",
      "properties": {
        "userId": {
          "type": "string"
        },
        "amount": {
          "type": "number"
        },
        "status": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "Payment": {
      "type": "object",
      "properties": {
        "loanId": {
          "type": "string"
        },
        "amount": {
          "type": "number"
        },
        "paymentDate": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}
